<div class="container">
<!-- ISOTOPE GRID -->
<div class="block-content block-content-small-padding">
  <div class="block-content-inner">
    <h2 class="center">What's Hot?</h2><br>
    <!-- <ul class="properties-filter"> for filtering
      <li><a href="#" data-filter=".property-featured"><span>Today</span></a></li>
      <li><a href="#" data-filter=".property-rent"><span>Tomorrow</span></a></li>
      <li class="selected"><a href="#" data-filter="*"><span>All</span></a></li>
    </ul> -->
    <div class="properties-items isotope">
      <div class="row">
        <% @popups.each do |popup| %>
        <div class="property-item property-featured col-sm-5 col-md-4">
          <div class="property-box">
            <div class="property-box-inner">
              <h3 class="property-box-title"><a href="property-detail.html"><%= link_to popup.name, popup_path(popup.id), id: 'name' %></a></h3>
              <h4 class="property-box-subtitle"><a href="property-detail.html"><%= link_to popup.description, popup_path(popup.id), id: 'description' %></a></h4>
              <!-- /.property-box-label -->
              <div class="property-box-picture">
                <div class="property-box-price">
                  <%= link_to popup.day, popup_path(popup.id), id: 'hours' %><br>
                  <%= link_to popup.hours, popup_path(popup.id), id: 'hours' %>
                </div><!-- /.property-box-price -->
                  <div class="property-box-picture-inner">
                    <div id="property-detail.html" class="property-box-picture-target">
                      <%= image_tag popup.image(:square), id: 'meta-image' %>
                    </div><!-- /.property-box-picture-target -->
                  </div><!-- property-box-picture-inner -->
              </div><!-- /.property-box-picture -->
                <div class="row-meta">  
                  <div class="property-box-meta">
                    <div class="property-box-meta-item col-xs-4 col-sm-4">                    
                      <%= rating_for popup, "price", :star => 5 %>                  
                    </div><!-- property-box-meta-item col-xs-4 col-sm-4 -->
                    <div class="property-box-meta-item col-xs-3 col-sm-3">
                      <strong><%= link_to popup.price, popup_path(popup.id), id: 'meta' %></strong>
                    </div><!-- property-box-meta-item col-xs-3 col-sm-3 -->
                  </div><!-- /.property-box-meta -->  
                </div><!-- row-meta -->
              </div><!-- /.property-box-inner -->
            </div> <!-- /.property-box -->
          </div><!-- /.property-item property-featured col-sm-5 col-md-4 -->
          <% end %>
        </div> <!-- row -->
      </div> <!-- properties-items isotope -->
    </div><!-- block-content-inner -->
  </div><!-- block-content block-content-small-padding -->
</div><!-- container -->

