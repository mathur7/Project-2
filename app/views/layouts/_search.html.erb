      <div class="navbar-form navbar-fluid" role="search">
        <div class="form-group">
          <%= form_tag "/popups/search", method: :get, id: 'search_form' do %>
            <%= text_field_tag :q, params[:q], placeholder: "eg: Wesburger", class: "form-control" %> 
            <%= text_field_tag :geocode, params[:geocode], placeholder: "eg: 112 Fell St, San Francisco, CA 94102", :id => "location", class: "form-control" %>
            <%= submit_tag "Search", :class => "btn btn-info" %>
          <% end %>
        </div>
          <div class="navbar-form pull-right">                
            <!-- <strong id="logged">Logged in as <%#= current_user.email %></strong> -->
